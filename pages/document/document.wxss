/* pages/document/document.wxss */

.report-container {
  padding: 20rpx;
}

.table-header, .table-row {
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 20rpx 0;
}

.table-header {
  background-color: #f5f5f5;
  font-weight: bold;
  text-align: center;
}

.col {
  padding: 0 10rpx;
}

.date {
  width: 30%;
  min-width: 200rpx;
}

.name {
  width: 40%;
  flex-grow: 1;
}

.location {
  width: 30%;
  text-align: right;
}

.table-row {
  transition: background-color 0.2s;
}

.table-row:active {
  background-color: #f0f0f0;
}