/* pages/components/login.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}
.fetch-button{
  position: absolute;
  bottom: 20%;
}
.greeting{
  margin: 30rpx;
}
.avatar-wrapper{
  background: transparent;
}
.userinfo-avatar {
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  margin: 20% 0;
  border-radius: 50%;
}

.nickname-wrapper {
  display: flex;
  width: 80%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
.btns{
  margin: 60rpx 0 0 0;
}