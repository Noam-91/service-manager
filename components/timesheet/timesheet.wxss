/* components/timesheet.wxss */
.container {
  width: 100%;
  padding: 30rpx 40rpx;
  color: black;
  font-size: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.page-header {
  width: 100%;
  height: 60rpx;
  background: white;
  z-index: 9;
  opacity: .6;
}
.header-img{
  width: 50%;
}
.page-size{
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.top-info{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: start;
  justify-content: center;
}
.zeme-img{
  width: 40%;
  object-fit: contain;
}
.timesheet-title{
  width: 60%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.title-text{
  font-size: 30rpx;
  font-weight: bold;
}
.three-rows{
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.rows{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.info-header{
  width: 30%;
  text-align: end;
  padding: 5rpx;
}
.content{
  width: 70%;
  text-align: start;
  padding: 5rpx;
  margin-left: 10rpx;
}
.nine-cols {
  width: 100%; 
  max-width: 100%; 
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: stretch; 
  justify-content: flex-start; 
  text-align: center;
  gap: 0; 
}

.cols {
  flex: 1; 
  min-width: 60rpx; 
  display: flex;
  flex-direction: column;
}

.cell {
  flex: 1;
  min-height: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid;
  text-align: center;
  padding: 8rpx; 
  white-space: normal;
  word-break: break-word;
}

.table-header {
  font-weight: bold;
  min-height: 60rpx; 
  line-height: 1.2; 
  background-color: #f0f0f0; 
  display: flex;
  align-items: center; 
  justify-content: center; 
  padding: 8rpx 0; 
  word-break: break-word; 
  white-space: normal; 
}
.hours_total{
  width: 100%;
  text-align: end;
  font-weight: bold;
  padding: 10rpx;
}
.signature-area{
  width: 90%;
  display: grid;
  grid-template-columns: 1fr 1fr;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  font-weight: bold;
}
.signature-col{
  display: flex;
  flex-direction: column;
  gap:50rpx;
}

.add-btn {
  width: 100%;
  height: 30rpx;
  margin-top: 20rpx;
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 4rpx;
  padding: 12rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}